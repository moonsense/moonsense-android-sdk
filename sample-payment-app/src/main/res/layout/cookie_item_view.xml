<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/item_row_add_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/add_circle"
        app:layout_constraintRight_toLeftOf="@id/item_row_count"
        app:layout_constraintTop_toTopOf="@id/item_row_title" />

    <TextView
        android:id="@+id/item_row_count"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/zero"
        android:textColor="@color/black"
        app:layout_constraintRight_toLeftOf="@id/item_row_remove_button"
        app:layout_constraintTop_toTopOf="@id/item_row_title" />

    <Button
        android:id="@+id/item_row_remove_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/remove_circle"
        app:layout_constraintRight_toLeftOf="@id/item_row_price"
        app:layout_constraintTop_toTopOf="@id/item_row_title" />

    <TextView
        android:id="@+id/item_row_price"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:textSize="16sp"
        android:gravity="center_vertical|end"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_row_title" />
</merge>